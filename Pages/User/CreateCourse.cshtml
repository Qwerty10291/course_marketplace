@page
@model course_marketplace.Pages.CreateCourseModel
@{
    ViewData["Title"] = "Create Course";
}

<h1>Create Course</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="CourseModel.Title"></label>
        <input asp-for="CourseModel.Title" class="form-control" />
        <span asp-validation-for="CourseModel.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CourseModel.Description"></label>
        <input asp-for="CourseModel.Description" class="form-control" />
        <span asp-validation-for="CourseModel.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CourseModel.Price"></label>
        <input asp-for="CourseModel.Price" class="form-control" />
        <span asp-validation-for="CourseModel.Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
